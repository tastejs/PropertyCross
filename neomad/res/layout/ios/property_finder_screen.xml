<?xml version="1.0"?>
<VerticalLayout id="@+id/ID_PROPERTY_FINDER" xsi:noNamespaceSchemaLocation="http://www.neomades.com/XSD/3.9.4/layout.xsd"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                contentAlignment="HCENTER|TOP"
                padding="16"
                stretchHorizontalMode="MATCH_PARENT"
                stretchVerticalMode="MATCH_PARENT"
                >
    <TextLabel id="@+id/ID_SEARCH_DESCRIPTION"
               marginBottom="4"
               stretchHorizontalMode="MATCH_PARENT"
               stretchVerticalMode="MATCH_CONTENT"
               text="@string/SEARCH_DESCRIPTION"
               textColor="#000000"/>

    <TextField id="@+id/ID_SEARCH"
               marginBottom="4"
               stretchHorizontalMode="MATCH_PARENT"
               stretchVerticalMode="MATCH_CONTENT"
               textColor="#000000"/>
               
    <HorizontalLayout stretchHorizontalMode="MATCH_PARENT"
	            stretchVerticalMode="MATCH_CONTENT" marginBottom="4">
	    <Button id="@+id/DO_SEARCH"
	            stretchHorizontalMode="MATCH_CONTENT"
	            stretchVerticalMode="MATCH_CONTENT"
	            text="@string/DO_SEARCH_TEXT"
	            textColor="#000000"/>
	
	    <Button id="@+id/DO_LOCATION"
	            stretchHorizontalMode="MATCH_CONTENT"
	            stretchVerticalMode="MATCH_CONTENT"
	            text="@string/USE_LOCATION_TEXT"
	            textColor="#000000"/>
    </HorizontalLayout>
    
	<VerticalLayout stretchHorizontalMode="MATCH_PARENT"
		stretchVerticalMode="MATCH_CONTENT">
		<WaitView id="@+id/WAIT_VIEW" visible="false"
			layoutAlignment="HCENTER" width="30" 
			height="30" />
		<TextLabel id="@+id/ERROR_MESSAGE" stretchHorizontalMode="MATCH_PARENT"
			stretchVerticalMode="MATCH_CONTENT" textColor="#000000" />
	</VerticalLayout>
    
    <TextLabel id="@+id/RESULTS_HEADER"
               stretchHorizontalMode="MATCH_PARENT"
               stretchVerticalMode="MATCH_CONTENT"
               text="@string/RECENT_SEARCHES"
               textColor="#000000"/>
    <HorizontalLayout stretchHorizontalMode="MATCH_PARENT"
                      stretchVerticalMode="MATCH_CONTENT"
                      backgroundColor="#777777"
                      height="1"/>
                      
	<ListView id="@+id/RECENT_LIST" visible="false" />

</VerticalLayout>