<?xml version="1.0"?>
<VerticalLayout id="@+id/ID_PROPERTY_FINDER"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" contentAlignment="HCENTER|TOP"
	padding="16" stretchHorizontalMode="MATCH_PARENT" stretchVerticalMode="MATCH_PARENT"
	xsi:noNamespaceSchemaLocation="http://www.neomades.com/XSD/3.5.0/layout.xsd">

	<TextLabel id="@+id/ID_SEARCH_DESCRIPTION" marginBottom="4"
		stretchHorizontalMode="MATCH_PARENT" stretchVerticalMode="MATCH_CONTENT"
		text="@string/SEARCH_DESCRIPTION" textColor="#000000" />

	<TextField id="@+id/ID_SEARCH" marginBottom="4"
		stretchHorizontalMode="MATCH_PARENT" stretchVerticalMode="MATCH_CONTENT"
		textColor="#000000" />

	<Button id="@+id/DO_SEARCH" marginBottom="4"
		stretchHorizontalMode="MATCH_PARENT" stretchVerticalMode="MATCH_CONTENT"
		text="@string/DO_SEARCH_TEXT" textColor="#000000" />

	<Button id="@+id/DO_LOCATION" marginBottom="4"
		stretchHorizontalMode="MATCH_PARENT" stretchVerticalMode="MATCH_CONTENT"
		text="@string/USE_LOCATION_TEXT" textColor="#000000" />

	<VerticalLayout stretchHorizontalMode="MATCH_PARENT"
		stretchVerticalMode="MATCH_CONTENT">
		<WaitView id="@+id/WAIT_VIEW" visible="false"
			layoutAlignment="HCENTER" stretchHorizontalMode="MATCH_CONTENT"
			height="30" />
		<TextLabel id="@+id/ERROR_MESSAGE" stretchHorizontalMode="MATCH_PARENT"
			stretchVerticalMode="MATCH_CONTENT" textColor="#000000" />
	</VerticalLayout>

	<TextLabel id="@+id/RESULTS_HEADER" stretchHorizontalMode="MATCH_PARENT"
		stretchVerticalMode="MATCH_CONTENT" text="@string/RECENT_SEARCHES"
		textColor="#000000" />
	<HorizontalLayout stretchHorizontalMode="MATCH_PARENT"
		stretchVerticalMode="MATCH_CONTENT" backgroundColor="#777777" height="1" />

	<ListView id="@+id/RECENT_LIST" separatorVisible="true"
		separatorColor="#CCCCCC" listIndicatorVisible="true" marginBottom="4"
		stretchHorizontalMode="MATCH_PARENT" stretchVerticalMode="MATCH_PARENT" />

</VerticalLayout>