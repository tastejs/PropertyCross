<?xml version="1.0"?>
<FrameLayout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	stretchHorizontalMode="MATCH_PARENT" stretchVerticalMode="MATCH_PARENT"
	xsi:noNamespaceSchemaLocation="http://www.neomades.com/XSD/3.5.0/layout.xsd">

	<Include refLayout="@layout/PROPERTY_SPLASH"/>

	<VerticalLayout
		contentAlignment="LEFT|TOP" stretchHorizontalMode="MATCH_PARENT"
		stretchVerticalMode="MATCH_PARENT" paddingTop="8" paddingLeft="16"
		paddingRight="16" paddingBottom="8"
		>
		<!-- Location -->
		<TextLabel id="@+id/ITEM_DETAIL_LOCATION" />
		<!-- Image -->
		<ImageLabel id="@+id/ITEM_DETAIL_IMAGE" margin="4"
			stretchHorizontalMode="MATCH_PARENT" stretchVerticalMode="MATCH_CONTENT" />
		<!-- Price -->
		<TextLabel id="@+id/ITEM_DETAIL_PRICE"
			stretchHorizontalMode="MATCH_PARENT" stretchVerticalMode="MATCH_CONTENT"
			marginBottom="8" />
			
		<VerticalLayout layoutAlignment="BOTTOM|HCENTER"
			contentAlignment="LEFT" stretchHorizontalMode="MATCH_PARENT"
			stretchVerticalMode="MATCH_PARENT">
			<!-- Title -->
			<TextLabel id="@+id/ITEM_DETAIL_TITLE"
				stretchHorizontalMode="MATCH_PARENT" stretchVerticalMode="MATCH_CONTENT"
				marginBottom="8" />
			<!-- Description -->
			<TextLabel id="@+id/ITEM_DETAIL_DESC"
				stretchHorizontalMode="MATCH_PARENT" stretchVerticalMode="MATCH_CONTENT" />
		</VerticalLayout>

	</VerticalLayout>

</FrameLayout>