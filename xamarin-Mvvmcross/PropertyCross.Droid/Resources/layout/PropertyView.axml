<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
  <TextView
      android:id="@+id/property_price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginBottom="8dp"
      android:textSize="22sp"
      android:textStyle="bold"
      local:MvxBind="Text PriceText"/>
  <TextView
      android:id="@+id/property_location"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:textSize="20sp"
      local:MvxBind="Text Location"/>
  <Mvx.MvxImageView
      android:id="@+id/property_image"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:adjustViewBounds="false"
      android:scaleType="fitXY"
      android:layout_margin="4dp"
      android:contentDescription="@string/property_img_description" 
       android:src="@drawable/ic_launcher"
      local:MvxBind="ImageUrl ImageUri"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">
    <TextView
        android:id="@+id/property_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp" local:MvxBind="Text PropertyOverview"/>
    <TextView
        android:id="@+id/property_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="16sp" local:MvxBind="Text PropertyInformation"/>
  </LinearLayout>
</LinearLayout>