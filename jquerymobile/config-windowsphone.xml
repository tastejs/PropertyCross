<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
	    xmlns:gap="http://phonegap.com/ns/1.0"
	    id="com.propertycross.jquerymobile.windowsphone"
	    version="1.0.0">

    <name>PropertyCross</name>

    <description>
        Part of the PropertyCross project, the Windows Phone version of the jQuery Mobile implementation.
    </description>

    <author href="http://propertycross.com">
        Colin Eberhardt, Chris Price
    </author>

    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/network" />

    <preference name="phonegap-version"           value="1.9.0" />
    <preference name="orientation"                value="portrait" />

    <icon src="assets/icons/ApplicationIcon.png"     gap:platform="winphone" />
    <icon src="assets/icons/ApplicationTileIcon.png" gap:platform="winphone" gap:role="background" />

    <gap:splash src="assets/splashscreens/SplashScreenImage.jpg"  gap:platform="winphone"/>

</widget>
