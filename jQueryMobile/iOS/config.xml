<?xml version="1.0" encoding="utf-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id = "com.scottlogic.propertyfinder"
	version = "1.0.0">

  <name>Property Finder</name>

  <description>
    A HTML5 property finder application
  </description>

  <author href="http://www.scottlogic.co.uk/blog/colin/"
		email="ceberhardt@scottlogic.co.uk">
    Colin Eberhardt
  </author>

  <gap:platforms>
    <gap:platform name="android" minVersion="2.1" />
    <gap:platform name="webos" />
    <gap:platform name="symbian.wrt" />
    <gap:platform name="blackberry" project="widgets"/>
  </gap:platforms>

  <icon src="icon.png"/>
  <icon src="icon@2x.png" width="114" height="114" />
  
  <gap:splash src="Default.png" width="320" height="480" />

  <preference name="orientation" value="portrait" />
  <preference name="webviewbounce" value="false" />
  <preference name="phonegap-version" value="1.9.0" />

  <feature name="http://api.phonegap.com/1.0/geolocation"/>
  <feature name="http://api.phonegap.com/1.0/network"/>

</widget>